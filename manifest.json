{
    "manifest_version": 3,
    "name": "YouTube Speed Control",
    "version": "1.0",
    "description": "Add speed control buttons to YouTube videos",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "action": {
      "default_icon": {
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  